<h1>Liste des taches</h1>
<div id="container">
    <form id="todo-form">
        <input
            type="text"
            id="todo-input"
            placeholder="Ajouter une nouvelle tÃ¢che"
        />
        <button type="submit">Ajouter</button>
    </form>
    <ul id="todo-list">
        <template id="todo-template">
            <li>
                <input type="checkbox" />
                <span class="description"></span>
            </li>
        </template>

        {{#each todos}}
            <li>
                <input type="checkbox" 
                {{#if this.est_faite}}
                    checked
                {{/if}}
                />
                <span class="description">{{this.description}}</span>
            </li>
        {{/each}}
    </ul>
</div>